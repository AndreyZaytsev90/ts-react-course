{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "composite": true,
        "declaration": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "incremental": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": ["src"]
}
